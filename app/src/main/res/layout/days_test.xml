<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/checkBox9"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_checkboxes"
            android:button="@drawable/custom_checkboxes"
            android:checked="false"
            android:gravity="center"
            android:onClick="onDayCheckBoxClicked"
            android:text="ש"
            android:textColor="#EA2424"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_checkboxes"
            android:button="@drawable/custom_checkboxes"
            android:checked="false"
            android:gravity="center"
            android:onClick="onDayCheckBoxClicked"
            android:text="ו"
            android:textColor="#0C8EEF"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_checkboxes"
            android:button="@drawable/custom_checkboxes"
            android:checked="false"
            android:gravity="center"
            android:onClick="onDayCheckBoxClicked"
            android:text="ה"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_checkboxes"
            android:button="@drawable/custom_checkboxes"
            android:checked="false"
            android:gravity="center"
            android:onClick="onDayCheckBoxClicked"
            android:text="ד"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_checkboxes"
            android:button="@drawable/custom_checkboxes"
            android:checked="false"
            android:gravity="center"
            android:onClick="onDayCheckBoxClicked"
            android:text="ג"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/checkBox7"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_checkboxes"
            android:button="@drawable/custom_checkboxes"
            android:checked="false"
            android:gravity="center"
            android:onClick="onDayCheckBoxClicked"
            android:text="ב"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_checkboxes"
            android:button="@drawable/custom_checkboxes"
            android:checked="false"
            android:gravity="center"
            android:onClick="onDayCheckBoxClicked"
            android:text="א"
            android:textSize="15dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/editTextTime2"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toEndOf="@+id/editTextTime2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editTextTime2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>